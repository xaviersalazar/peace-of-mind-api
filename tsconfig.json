{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "esnext",
      "dom",
      "es2015.promise"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "@types/**/*.d.ts",
    "node_modules/axios",
    "node_modules/redux-thunk"
  ]
}
